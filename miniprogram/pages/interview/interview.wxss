.search {
  height: 45rpx;
  width: 50%;
  margin-left: 25%;
  margin-top: 50rpx;
  margin-bottom: 70rpx;
  
  /* 边框 */
  border: solid 5rpx #00000033;
  /* 圆角 */
  border-radius: 50rpx;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.search-hover{
  height: 50rpx;
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.search-input{
  width: 80%;
  height: 100%;
  margin-left: 30rpx;
}
.search-img{
  width: 9%;
  height: 80%;
  margin-right: 23rpx;
}

.user{
  height: 120rpx;
  width: 90%;
  margin-left: 5%;
  margin-bottom: 50rpx;
  border: solid 5rpx #00000033;
  border-radius: 20rpx;
  /* 下面这四句我也不知道什么意思，总之实现了把那两个按钮搞到右边的操作！ */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.userinfo{
  height: 100%;
  width: 60%;
  display: flex;
  justify-content: flex-start;
  text-align: center;
}

.userinfo-head{
  height: 100rpx;
  width: 100rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
}

.userinfo-name{
  height: 50rpx;
  /* width: 100rpx; */
  margin-top: 40rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  /* float:left ; */
}
.userinfo-number{
  height: 50rpx;
  width: 150rpx;
  margin-top: 55rpx;
}

